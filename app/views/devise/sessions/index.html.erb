 
<html>
<body>
    <div class="flex-centered bg-primary ctr-primary ">
<div class=" flex-column rad-10 w-30">

<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="form-field flex-column-centered mt-m10">

    <div class="field flex-start">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email"  %>
    </div>

    <div class="name-field flex-start">
    <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Password"  %>
  </div>
  
  
  <div class="actions flex-centered">
  <%= f.submit "Login" %>
  <% end %>
  </div>
  </div>
  <div class="flex- mt-1 pl-1 flex-column-centered">
  
  <div class="flex">

    <%= render "devise/shared/links" %>
  </div>
  </div>

  </div>
  </div>
  </body>
</html>